@model IEnumerable<ePro.Models.ComplianceForm>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Select Category: @Html.DropDownList("SelectedCompCat", "All")
        <input type="submit" value="Filter" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ComplianceCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ComplianceCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ComplianceFormID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ComplianceFormID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ComplianceFormID })
        </td>
    </tr>
}

</table>
